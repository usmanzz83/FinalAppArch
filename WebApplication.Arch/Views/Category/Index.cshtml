@using Application.Entities.Entities

@model IEnumerable<Category>

@{
    ViewBag.Title = "View";
}

<h2>List of All Categories</h2>

<style type="text/css">
    table.table-hover tbody tr:hover td:hover {
        background-color: dimgrey;
        color:white;
    }
</style>

<div class="table-responsive">
    <table id="assets-data-table" class="table table-striped table-sm table-bordered table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>@Html.DisplayNameFor(model => model.CategoryName) </th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <th>Total Products</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="hover">@Html.DisplayFor(listItem => item.CategoryID)</td>
                    <td class="hover">@Html.DisplayFor(listItem => item.CategoryName)</td>
                    <td class="hover">@Html.DisplayFor(listItem => item.Description)</td>
                    <td class="hover">@item.Products.Count()</td>
                    <td class="hover"> </td>
                </tr>
            }
        </tbody>
    </table>
</div>


@section Scripts
{
    <script type="text/javascript">
     $(document).ready(function () {

         $('#assets-data-table').DataTable();
     });
    </script>
}
